@model LoginViewModel

<div class="login">
    <partial name="_ValidationSummary" />
    <h2 class="active"> Forgot Password </h2>
    <form asp-route="Login">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="form-group" id='usernameform'>
            <label asp-for="Username"></label>
            <input class="form-control" id='txtUsername' placeholder="Username" autofocus>
        </div>
        <div class="form-group"  id='accCodeForm'>
            <label>Access Code</label>
            <input class="form-control" id='txtAccessCode' placeholder="Access Code">
        </div>
        <div class="form-group"  id='usernamepasswordform'>
            <label asp-for="Password"></label>
            <input type="password" class="form-control" id='txtNewPassword' placeholder="Password" autocomplete="off">
        </div>

        <button class="signin" type="button" id='btnSubmit' name="button" disabled=''>Send Access Code</button>
    </form>
</div>
<script src="~/lib/jquery/jquery.js"></script>
<script src="~/js/forgotPass.js"></script>