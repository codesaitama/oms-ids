@model LoginViewModel
@{}

<div class="login">

    <partial name="_ValidationSummary" />
<h2 class="active"> sign in </h2>
        @if (Model.EnableLocalLogin)
        {
            <form asp-route="Login">
 		        <input type="hidden" asp-for="ReturnUrl" />
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input class="form-control text" id='txtName' placeholder="Username" asp-for="Username" autofocus>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" class="form-control text" id='txtPassword' placeholder="Password" asp-for="Password" autocomplete="off">
                </div>
                
                <button class="signin" id='btnSignIn' name="button" value="login" disabled=''> Login </button>
                <a  asp-controller="Home" asp-action="ForgotPassword" >Forgot Password?</a>
            </form>
        }

        @if (Model.VisibleExternalProviders.Any())
        {
        }

        @if (!Model.EnableLocalLogin && !Model.VisibleExternalProviders.Any())
        {
            <div class="alert alert-warning">
                <strong>Invalid login request</strong>
                There are no login schemes configured for this client.
            </div>
        }
</div>
<script src="~/lib/jquery/jquery.js"></script>
<script src="~/js/app.js"></script>